option_settings:
  - namespace:  aws:elb:listener:443
    option_name:  InstancePort
    value:  443
  - namespace:  aws:elb:listener:443
    option_name:  InstanceProtocol
    value:  TCP
  - namespace:  aws:elb:listener:443
    option_name:  ListenerEnabled
    value:  true
  - namespace:  aws:elb:listener:443
    option_name:  ListenerProtocol
    value:  TCP
  # Use the custom security group for the load balancer
  - namespace:  aws:elb:loadbalancer
    option_name:  SecurityGroups
    value:  '`{ "Ref" : "loadbalancersg" }`'
  - namespace:  aws:elb:loadbalancer
    option_name:  ManagedSecurityGroup
    value:  '`{ "Ref" : "loadbalancersg" }`'

Resources:
  # Create a custom load balancer security group for ease of modification
  loadbalancersg:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: load balancer security group
      VpcId: vpc-########
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 443
          ToPort: 443
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
      SecurityGroupEgress:
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 443
          ToPort: 443
          CidrIp: 0.0.0.0/0
  httpsFromLBtoInstances: 
    Type: AWS::EC2::SecurityGroupIngress
    Properties:
      GroupId: {"Fn::GetAtt" : ["AWSEBSecurityGroup", "GroupId"]}
      IpProtocol: tcp
      ToPort: 443
      FromPort: 443
      SourceSecurityGroupId: {"Fn::GetAtt" : ["loadbalancersg", "GroupId"]}